<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fusion_red</item>
        <item name="colorPrimaryVariant">@color/good_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fusion_red</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/black_pearl</item>
    </style>
    <style
        name="TextViewLightStyle"
        parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="InputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/good_night</item>
        <item name="boxStrokeColor">@color/fusion_red</item>
        <item name="hintTextColor">@color/chineseBlack</item>
        <item name="startIconTint">@color/fusion_red</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="RoundedImage" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_15mdp</item>
    </style>
    <style name="TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_18font_mdp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/fusion_red</item>
    </style>
</resources>